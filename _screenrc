# -----------------
#     screenrc
# -----------------
# Docs: http://www.limy.org/program/screen.html

autodetach on
escape ^f^f
term xterm-256color

defutf8 on
defencoding utf-8
encoding utf8 utf8

startup_message off
vbell off

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][ %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'

bind n screen
bind h prev
bind l next
bind x remove
# bind p eval "split -v" focus screen
