{
    "terminal.integrated.fontSize": 10,

    "editor.fontSize": 10,
    "editor.tabSize": 2,
    "editor.scrollBeyondLastLine": false,
    "editor.minimap.enabled": false,

    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "vim.hlsearch": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "monaco",
    "vim.easymotionMarkerBackgroundColor": "purple",
    "vim.easymotionMarkerFontSize": "12",
    "vim.easymotionKeys": "hjklasdfgyuiopqwertnmzxcvbHJKLASDFGYUIOPQWERTNMZXCVB",
    "vim.visualModeKeyBindingsNonRecursive": [{
       "before": [">"],
       "commands": ["editor.action.indentLines"]
    }, {
       "before": ["<"],
       "commands": ["editor.action.outdentLines"]
    }],
    "vim.normalModeKeyBindingsNonRecursive": [{
        "before": ["<C-c>"],
        "after": [],
        "commands": [{
            "command": ":nohl"
        }]
    }, {
        "before": ["<leader>", "f", "g"],
        "after": [],
        "commands": [{
            "command": "workbench.action.quickOpen"
        }]
    }, {
        "before": ["<leader>", "f", "f"],
        "after": [],
        "commands": [{
            "command": "workbench.view.search"
        }]
    }, {
        "before": ["<C-j>"],
        "after": ["<leader>", "<leader>", "2", "f"]
    }, {
        "before": ["<C-k>"],
        "after": ["<leader>", "<leader>", "2", "F"]
    }],

    "todohighlight.isEnable": true,

    "go.formatTool": "gofmt",
    "go.lintOnSave": "off",
    "go.vetOnSave": "package",
    "go.gocodeAutoBuild": false,
    "go.useLanguageServer": true,
    "go.toolsEnvVars": {
        "GO111MODULE": "on"
    },
    "[go]": {
        "editor.formatOnSave": true
    },

    "window.zoomLevel": 0,
    "workbench.colorTheme": "Bittersweet",
    "workbench.iconTheme": "vscode-icons",

    "elmLS.elmFormatPath": "./node_modules/.bin/elm-format",
    "elmLS.elmPath": "./node_modules/.bin/elm",
    "elmLS.elmTestPath": "./node_modules/.bin/elm-test",
    "[elm]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },

    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.editor.labelFormat": "short"
}
