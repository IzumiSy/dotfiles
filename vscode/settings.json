{
    "window.zoomLevel": 0,

    "terminal.integrated.fontSize": 10,

    "editor.fontSize": 10,
    "editor.tabSize": 2,
    "editor.scrollBeyondLastLine": false,
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.lineNumbers": "relative",

    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.labelFormat": "short",
    "workbench.colorTheme": "Bittersweet",
    "workbench.iconTheme": "vscode-icons",

    "vim.hlsearch": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.easymotionMarkerBackgroundColor": "purple",
    "vim.easymotionKeys": "hjklasdfgyuiopqwertnmzxcvbHJKLASDFGYUIOPQWERTNMZXCVB",
    "vim.insertModeKeyBindings": [
      {
        "before": ["j", "j"],
        "commands": ["<ESC>"]
      }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
      {
         "before": [">"],
         "commands": ["editor.action.indentLines"]
      }, {
         "before": ["<"],
         "commands": ["editor.action.outdentLines"]
      }, {
          "before": ["<S-l>"],
          "after": ["w"]
      }, {
          "before": ["<S-h>"],
          "after": ["b"]
      }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {
          "before": ["j", "j"],
          "commands": [":nohl"]
      }, {
          "before": ["<leader>", "f", "g"],
          "commands": ["workbench.action.quickOpen"]
      }, {
          "before": ["<leader>", "f", "f"],
          "commands": ["workbench.view.search"]
      }, {
          "before": ["<leader>", "d", "f"],
          "commands": ["editor.action.revealDefinitionAside"]
      }, {
          "before": ["<S-l>"],
          "after": ["w"]
      }, {
          "before": ["<S-h>"],
          "after": ["b"]
      }
    ],

    "todohighlight.isEnable": true,

    "go.formatTool": "gofmt",
    "go.lintOnSave": "off",
    "go.buildOnSave": "off",
    "go.vetOnSave": "package",
    "go.gocodeAutoBuild": false,
    "go.useLanguageServer": true,
    "go.toolsEnvVars": {
        "GO111MODULE": "on"
    },
    "[go]": {
        "editor.formatOnSave": true
    },

    "[elm]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },

    "typescript.updateImportsOnFileMove.enabled": "always",

    "files.maxMemoryForLargeFilesMB": 1024,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.next/**": true,
        "**/node_modules/**": true,
        "**/elm-stuff/**": true,
    },

    "search.exclude": {
        "**/.next/**": true,
        "**/elm-stuff": true,
        "**/node_modules/**": true
    }
}
